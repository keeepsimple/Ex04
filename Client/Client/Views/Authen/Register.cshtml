@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-md-4">
        <form id="register" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div id="error" class="text-danger mb-3"></div>
            <div class="form-floating">
                <input id="email" class="form-control" autocomplete="username" required />
                <label for="email">Email</label>
            </div>
            <div class="form-floating mt-3">
                <input id="username" class="form-control" autocomplete="username" required />
                <label  for="username">Username</label>
            </div>
            <div class="form-floating mt-3">
                <input id="password" class="form-control" type="password" autocomplete="new-password" required />
                <label  for="password">Password</label>
            </div>
            <div class="form-floating mt-3 mb-3">
                <input id="confirmPassword" class="form-control" type="password" autocomplete="new-password" required />
                <label for="confirmPassword">Confirm Password</label>
                <span id="message" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
           
        </section>
    </div>
</div>

@section scripts{
    <script type="module" src="~/js/register.js"></script>
}