<div class="row">
    <div class="col-md-8">
        <div id="postBlock">
        </div>
        <div id="rateBlock" class="card mt-3 border-warning">
            <div class="card-header">
                <h5>Rate this post</h5>
            </div>
            <div class="card-body">
                <div id="rate" class="rate">
                    <input type="radio" id="star5" name="TotalRate" class="rate-item" value="5" />
                    <label for="star5" title="5 stars">5 stars</label>
                    <input type="radio" id="star4" name="TotalRate" class="rate-item" value="4" />
                    <label for="star4" title="4 stars">4 stars</label>
                    <input type="radio" id="star3" name="TotalRate" class="rate-item" value="3" />
                    <label for="star3" title="3 stars">3 stars</label>
                    <input type="radio" id="star2" name="TotalRate" class="rate-item" value="2" />
                    <label for="star2" title="2 stars">2 stars</label>
                    <input type="radio" id="star1" name="TotalRate" class="rate-item" value="1" />
                    <label for="star1" title="1 stars">1 star</label>
                </div>
            </div>
        </div>
        <div id="commentBlock" class="card mt-3">
            <div class="card-header">
                <h5>Post Comments</h5>
            </div>
            <div class="card-body">
                <div id="addComment" class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon3">Your comment</span>
                    <input type="text" id="commentContent" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                    <button id="sendComment" class="btn btn-primary">Send</button>
                </div>
                <h5 id="loginToComment" class="mt-3 text-center">Please sign in to post comment.</h5>
                <div id="comments">
                    
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h4>Other post in this category</h4>
        <div id="other">
        </div>
    </div>
</div>

@section scripts{
    <script type="module" src="~/js/detailPost.js"></script>
}